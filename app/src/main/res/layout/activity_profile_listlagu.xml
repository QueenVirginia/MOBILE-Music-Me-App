<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    tools:context=".profile_listlagu">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/back2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/myWhite"
        android:fontFamily="@font/poppins_medium"
        android:textSize="26dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="Hi,\nThis is My Profile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/bg_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textColor="@color/myBlack"
            android:fontFamily="@font/poppins_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="100dp"
            android:textSize="14sp"
            android:lineHeight="60dp"
            android:text="Name\nNIM\nClass" />

        <TextView
            android:textColor="@color/myBlack"
            android:fontFamily="@font/poppins_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="125dp"
            android:textSize="12sp"
            android:lineHeight="60dp"
            android:text="Queen Virginia Jeanifer Tambayong\n00000029272\nFL" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/profile"
        android:layout_marginBottom="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="180dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/myWhite"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="References:"  />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="10sp"
            android:textColor="@color/myWhite"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="https://www.youtube.com/watch?v=tlOGecRQeOo&amp;list=WL%20&amp;index=33 (YOUTUBE) \nhttps://www.youtube.com/watch?v=j-3L3CgYXkU&amp;t=5s (YOUTUBE) " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="10sp"
            android:textColor="@color/myWhite"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="https://github.com/Karumi/Dexter (INTERNET) \nhttps://github.com/gauravk95/audio-visualizer-android (INTERNET)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="10sp"
            android:textColor="@color/myWhite"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="FRIEND -" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>